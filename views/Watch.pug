extends layout

block content
  h1= title
  - let items = results;
  - var Watch = [{watchModel:"Rolex", watchYear:"2021", watchPrice:1200}, {watchModel:"Rado", watchYear:"2020", watchPrice:700}, {watchModel:"Fossil", watchYear:"2022", watchPrice:229}]

  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination = `dispatch("/Watch/update?id=${item._id}")`
        div(class="row-sm-2 m-1")
          | Item #{item.watchModel}(#{item.watchYear}) is #{item.watchPrice}
          button.btn.btn-primary.ml-1(onclick=destination) Update
          

  script.
    function buy(a) {
      alert(`You purchased Item ${a+1}`);
    }
    function dispatch(path) {
      window.location.href = path;
    }
